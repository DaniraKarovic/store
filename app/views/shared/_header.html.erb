<div class="navbar navbar-default navbar-new">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navMain">
        <span class="glyphicon glyphicon-chevron-left" style="color:white;"></span>
        </button>
        <%= image_tag 'logo1.png', :class => "brand" %>
    </div>
    <div class="collapse navbar-collapse" id="navMain">
      <ul class="nav navbar-nav pull-right">
        <li class="<%= 'active' if params[:controller]=='home' && params[:action] == 'index' %>"><%= link_to 'Home', root_path %></li>
        <li class="<%= 'active' if params[:controller]=='products' %>"><%= link_to 'Products', products_path %></li>
        <li class="<%= 'active' if params[:controller]=='sellers' && params[:action] == 'index' %>"><%= link_to 'Sellers', sellers_path %></li>
        <li class="<%= 'active' if params[:controller]=='categories' && params[:action] == 'index' %>"><%= link_to 'Category', categories_path %></li>
        <li class="<%= 'active' if params[:controller]=='abouts' && params[:action] == 'show' %>"><%= link_to 'About', about_path %></li>
    
    <ul class="nav navbar-nav pull-right">
          <% unless logged_in? %>
            <li><%= link_to 'Login', new_session_path %></li>
            <li><%= link_to 'Register', new_user_path %></li>
          <% else %>
            <li class="dropdown">
              <a data-toggle="dropdown" class="dropdown-toggle" href="#">Logged in as: <%= current_user.username %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <% if current_user.admin? %>
                  <li><%= link_to 'Dashboard', admin_dashboard_path %></li>
                <% end %>
                <li><%= link_to 'Logout', session_path, method: :delete %></li>
              </ul>
            </li>
          <% end %>
        </ul>
  </ul>
    </div>
  </div>
</div>
